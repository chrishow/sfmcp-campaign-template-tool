{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "allowJs": true, 
    "strictPropertyInitialization": false,

    /* Bundler mode */
    "moduleResolution": "bundler", // or "node" if issues arise
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite handles emitting

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Added for decorators if needed, and HMR types */
     "experimentalDecorators": true, // In case you decide to parse the TS file later
     "emitDecoratorMetadata": true,   // In case you decide to parse the TS file later
     "types": ["vite/client"]        // Important for import.meta.hot types
  },
  "include": ["src", "vite.config.ts"], // Include config file too
  // "references": [{ "path": "./tsconfig.node.json" }] // Often generated by `create-vite`
}
